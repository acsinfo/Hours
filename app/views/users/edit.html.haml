.outer
  .container
    %h2= t("registration.edit")
    = render "application/avatar", user: @user
    %p= t("registration.gravatar_instructions_html")
    = simple_form_for(@user) do |f|
      = f.error_notification
      .form-inputs.edit-user
        = f.input :first_name, required: true, autofocus: true, label: t("registration.first_name")
        = f.input :last_name, required: true, label: t("registration.last_name")
        = f.input :email, required: true, label: t("registration.email")
        = f.input :password, autocomplete: "off", hint: t("registration.hint.blank"), required: false, label: t("registration.password")
        = f.input :password_confirmation, required: false, label: t("registration.password_confirmation")
        = f.input :current_password, hint: t("registration.hint.current_password"), required: true, label: t("registration.current_password")
      .form-actions
        = f.button :submit, t("registration.update_button"), data: { disable_with: t("loader.saving") }
    = link_to t("back"), :back
